@model LoginModel

@{
    ViewData["Title"] = "Login";
}
    <div class="container-fluid text-center">
        <h2>Login</h2>
        <div class="row">
            @Html.Partial("Shared")
            <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 text-left">
                <small>Or <a href="@Url.Action("Register","Account")">Register</a> if you don't have an account</small>

                <div>
                    <form asp-action="Login" onsubmit="return checkForm(this);">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @if (Model.AreCredentialsInvalid)
                        {
                            <span class="text-danger">Email or password is incorrect</span>
                        }

                        <div class="form-group">
                            <input name="submit" type="submit" value="Login" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>