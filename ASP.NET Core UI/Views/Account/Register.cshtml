@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<script src="/lib/jquery/dist/jquery.js"></script>
<h2>Register</h2>
@Html.Partial("Shared")

<div class="row">
    <div >
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nume</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Prenume</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Parola</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountyId" class="control-label">Judet</label>
                <select asp-for="CountyId" asp-items="Model.Counties" class="form-control"></select>
                <span asp-validation-for="CountyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalityId" class="control-label">Oras</label>
                <select asp-for="LocalityId" asp-items="Model.Localities" class="form-control"></select>
                <span asp-validation-for="LocalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SexualIdentity" class="control-label"></label>
                <select asp-for="SexualIdentity" class="form-control">
                    <option value="feminin">Feminin</option>
                    <option value="masculin">Masculin</option>
                    <option value="nespecificat">Nespecificat</option>
                </select>
                <span asp-validation-for="SexualIdentity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default needConfirmation" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/Localities.js"></script>