@model AlbumViewerModel
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}


<h1>@Model.Name</h1>

<div id="imageBody">

</div>

<a class="btn btn-danger" href="/Users/DeleteAlbum?albumId=@Model.Id" >Delete this album</a>

<script id="image-template" type="text/x-handlebars-template">

    <div class="imagine">

        <div class="bodyImagine">
            <img src="/Photos/Download/{{id}}" />
            <p>{{description}}</p>
        </div>
        <div class="photoActions">
            <a id="removePhoto{{id}}" class="needConfirmation btn btn-danger btn-sm" href="/Users/DeletePhoto?photoId={{id}}&albumId={{albumId}}">Delete this photo</a>
            <input type="text" class="description" />
            <button class="btn btn-primary btn-sm" id="changeDescription{{id}}" data-photoid="{{id}}">Save</button>
        </div>

    </div>

</script>

<button id="imageGetter" data-album="@Model.Id" hidden="hidden">Load more images</button>
<script src="~/js/Image.js"></script>